<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Score</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody>
 
 <% @comments.each do |comment| %>
  <tr>
  <td><%= comment.title %></td>
  <td><%= comment.text %></td>
  <td><%= comment.score %></td>
  <td><%= comment.User.username %></td>
  <td><%= comment.Restaurant.title %></td>
   <% if logged? && admin? %>
   <td><%= link_to 'Show', comment %></td>
   <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
   <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
 <% end %>
   
      </tr>
    <% end %>
  </tbody>
</table> 
<br>

